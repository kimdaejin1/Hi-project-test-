<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sin_up_guide1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.865"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sin_up_guide2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/log_in_guide1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/log_in_guide2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.692"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/button_guide1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/button_guide2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/welcome_logo1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/welcome_logo2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/welcome_logo3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/image_guide"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text1_guide1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text1_guide2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text1_guide3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/hi_logo"
        app:layout_constraintStart_toStartOf="@id/welcome_logo2"
        app:layout_constraintEnd_toEndOf="@id/welcome_logo3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@id/welcome_logo1"/>

    <Button
        android:id="@+id/log_in_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/button_guide1"
        app:layout_constraintEnd_toEndOf="@id/button_guide2"
        app:layout_constraintTop_toTopOf="@id/log_in_guide2"
        app:layout_constraintBottom_toBottomOf="@id/log_in_guide1"
        android:background="@drawable/buttonrund"
        android:text="@string/log_in_go"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_bold"
        />
    <Button
        android:id="@+id/sin_up_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/button_guide1"
        app:layout_constraintEnd_toEndOf="@id/button_guide2"
        app:layout_constraintTop_toTopOf="@id/sin_up_guide2"
        app:layout_constraintBottom_toBottomOf="@id/sin_up_guide1"
        android:background="@drawable/buttonrund"
        android:text="@string/sin_up_go"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_bold"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/text1_guide1"
        app:layout_constraintStart_toStartOf="@id/button_guide1"
        app:layout_constraintEnd_toEndOf="@id/button_guide2"
        app:layout_constraintBottom_toBottomOf="@id/text1_guide2"
        android:text="@string/welcome_big_text"
        android:textSize="31.5sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_extrabold"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/text1_guide2"
        app:layout_constraintBottom_toBottomOf="@id/text1_guide3"
        app:layout_constraintStart_toStartOf="@id/button_guide1"
        app:layout_constraintEnd_toEndOf="@id/button_guide2"
        android:text="@string/welcome_small_text"
        android:gravity="center"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_bold"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/welcome_logo1"
        app:layout_constraintBottom_toBottomOf="@id/image_guide"
        />





    





</androidx.constraintlayout.widget.ConstraintLayout>